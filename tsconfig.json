{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esNext",
    "target": "es6",
    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "noEmit": true,
    "pretty": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "strictNullChecks": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "jest"
  ],
  "types": [
    "typePatches"
  ]
}
